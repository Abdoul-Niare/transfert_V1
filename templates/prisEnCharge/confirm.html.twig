{% extends 'base.html.twig' %}

{% block title %}Transfert
{% endblock %}

{% block body %}
	<div class="container">
		<h2 class="m-3" style="text-align:center">Transfert</h2>

		<table class="table" style="margin:0 auto">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ transfert.id }}</td>
				</tr>
				<tr>
					<th>Statut</th>
					<td>{{ transfert.statut }}</td>
				</tr>
				<tr>
					<th>CodeSecret</th>
					<td>{{ transfert.codeSecret }}</td>
				</tr>
				<tr>
					<th>MontTransfert</th>
					<td>{{ transfert.montTransfert }}</td>
				</tr>
				<tr>
					<th>MontBenef</th>
					<td>{{ transfert.montBenef }}</td>
				</tr>
				<tr>
					<th>FraisTransfert</th>
					<td>{{ transfert.fraisTransfert }}</td>
				</tr>
				<tr>
					<th>ComTransfert</th>
					<td>{{ transfert.comTransfert }}</td>
				</tr>

				<tr>
					<th>ComAgentLivreur</th>
					<td>{{ transfert.comAgentLivreur }}</td>
				</tr>

				<tr>
					<th>NomBenef</th>
					<td>{{ transfert.nomBenef }}</td>
				</tr>
				<tr>
					<th>NumBenef</th>
					<td>{{ transfert.numBenef }}</td>
				</tr>
				<tr>
					<th>NumTelBenef</th>
					<td>{{ transfert.numTelBenef }}</td>
				</tr>
				<tr>
					<th>DateEnvoi</th>
					<td>{{ transfert.dateEnvoi ? transfert.dateEnvoi|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
				<tr>
					<th>DatePrisCharge</th>
					<td>{{ transfert.datePrisCharge ? transfert.datePrisCharge|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
				<tr>
					<th>DateLivr</th>
					<td>{{ transfert.dateLivr ? transfert.dateLivr|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
				<tr>
					<th>Is_visible</th>
					<td>{{ transfert.isVisible ? 'Yes' : 'No' }}</td>
				</tr>
			</tbody>
		</table>


		
		<div class="text-center d-flex justify-content-center">
			{# <a class="btn btn-warning p-1 m-1" href="{{ path('app_transfert_take', {'id': transfert.id}) }}">Prendre en charge</a> #}
			{{ include('prisEnCharge/_confirm_take_form.html.twig') }}
			<a class="btn btn-primary p-1 m-3" href="{{ path('app_transfert_index') }}">Retour à la liste</a>
	
			{# <a class="btn btn-secondary p-1 " href="{{ path('app_transfert_edit', {'id': transfert.id}) }}">Modifier</a> #}
		</div>
		
		
		{# <div class="text-center">
			<a class="btn btn-warning p-1 m-1" href="{{ path('app_transfert_delivery', {'id': transfert.id}) }}">transfert livré</a>
		</div> #}

	</div>

{% endblock %}

