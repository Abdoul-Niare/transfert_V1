
{% extends 'base.html.twig' %}
 
{% block title %}Accueil{% endblock %}
 
{% block body %}
 
    <h2 class="text-center mt-4">Details des Transferts de l'utilisateur </h2>
 
    <div class="registerForm m-5">

   
 
		<table>
			<thead>
				<tr>
					
					<th>Status</th>
					<th>Expediteur</th>
					<th>Agent_Livreur</th>
					<th>Bénéficiaire</th>
					<th>Montant transfert</th>
					<th>Frais du transfert</th>
					<th>Date d'envoi</th>
					<th>Date pris charge</th>
					<th>Date livraison</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for transfert in transferts %}
					<tr>
						
						<td>{{ transfert.statut }}</td>
						<td>{{ transfert.expediteur }}</td>
						<td>{{ transfert.agentLivreur }}</td>
						<td>{{ transfert.nomBenef }}</td>
						<td>{{ transfert.montTransfert }}</td>
						<td>{{ transfert.fraisTransfert }}</td>
						<td>{{ transfert.dateEnvoi ? transfert.dateEnvoi|date('Y-m-d H:i:s') : '' }}</td>
						<td>{{ transfert.datePrisCharge ? transfert.datePrisCharge|date('Y-m-d H:i:s') : '' }}</td>
						<td>{{ transfert.dateLivr ? transfert.dateLivr|date('Y-m-d H:i:s') : '' }}</td>
						<td>
							<a href="{{ path('app_transfert_show', {'id': transfert.id}) }}" class="btn btn-success">Voir le transfert</a>
							
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="16">Vous n'avez aucun Transfert</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		 </div>
{% endblock %}
