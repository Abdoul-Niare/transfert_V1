{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!
{% endblock %}

{% block body %}

		<h1 class=" title text-center">Mes transferts</h1>
		<table>
			<thead>
				<tr>
					<th>Id</th>
					<th>Agent_Livreur</th>
					<th>Statut</th>
					<th>MontTransfert</th>
					<th>MontBenef</th>
					<th>FraisTransfert</th>
					<th>NomBenef</th>
					<th>NumBenef</th>
					<th>NumTelBenef</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for transfert in transferts %}
                <tr>
                        <td>{{ transfert.id }}</td>
                        <td>{{ transfert.agentLivreur }}</td>
						<td>{{ transfert.statut }}</td>
						<td>{{ transfert.montTransfert }}</td>
						<td>{{ transfert.montBenef }}</td>
						<td>{{ transfert.fraisTransfert }}</td>
						<td>{{ transfert.nomBenef }}</td>
						<td>{{ transfert.numBenef }}</td>
						<td>{{ transfert.numTelBenef }}</td>
						<td>
                        <a href="{{ path('app_transfert_show', {'id': transfert.id}) }}" class="btn btn-success">Voir le transfert</a>
							<a class="btn btn-primary p-1 m-1" href="{{ path('app_transfert_show', {'id': transfert.id}) }}">Afficher</a>
							<a class="btn btn-warning p-1 m-1" href="{{ path('app_transfert_edit', {'id': transfert.id}) }}">Modifier</a>
                        </td>
                    </tr>
				{% endfor %}
			</tbody>
		</table>
{% endblock %}
