{% extends 'base.html.twig' %}

{% block title %}GÃ©rer les utilisateurs
{% endblock %}

{% block body %}

	<section class="list_utilisateur">
		<h2 class="text-center m-4" >Liste des utilisateurs</h2>


		<div class="container">
		<a class="btn btn-primary text-center mb-3" href="{{ path('app_user_new') }}"><i class="fa-solid fa-user-plus"></i> Add Agent</a>

			<table class="container-fluid w-50">
				<thead>
					<tr>
						<th>Id</th>
						<th>Nom utilisateur</th>
						<th>Ville</th>
						<th>Roles</th>
						<th>Nom</th>
						<th>Prenom</th>
						<th>Email</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for user in users %}
						<tr>
							<td>{{ user.id }}</td>
							<td>{{ user.username }}</td>
							<td>{{ user.ville }}</td>
							<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
							<td>{{ user.nom }}</td>
							<td>{{ user.prenom }}</td>
							<td>{{ user.mail }}</td>
							<td>
								<a class="btn btn-info p-1 m-1" href="{{ path('app_user_show', {'id': user.id}) }}"><i class="fa fa-eye"></i> Afficher</a>
								<a class="btn btn-warning p-1 m-1" href="{{ path('app_user_edit', {'id': user.id}) }}"><i class="fa-solid fa-user-pen"></i> Modifier</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="8">no records found</td>
						</tr>
					{% endfor %}
				</tbody>
			
			</table>

		</div>
	</section>
{% endblock %}
