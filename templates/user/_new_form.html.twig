<div class="container ">
	<div class="content_userForm">
	{% for message in app.flashes('success') %}
		<div class="alert alert-success ">
			<strong class="font-bold">Succ√®s !</strong>
			{{ message }}
		</div>
	{% endfor %}
		{{ form_start(form) }}
		<div class="row d-flex justify-content-center justify-content ">
			<div class="col-3">

				{{ form_row(form.nom) }}
				{{ form_row(form.mail) }}

			</div>
			<div class="col-3">
				{{ form_row(form.Prenom) }}
				{{ form_row(form.username) }}
			</div>
			<div class="col-3">
				{{ form_row(form.ville) }}
				{{ form_row(form.roles) }}
			</div>
		</div>
		<div class="d-flex justify-content-center mt-3">
			<div class=" m-5 ">
				<button class="btn btn-success">{{ button_label|default('Enrigistrer') }}</button>
				<a class="btn btn-info m-1" href="{{ path('app_user_index') }}">Annuler</a>
			</div>
		</div>
		{{ form_end(form) }}
	</div>


</div>
