
{% extends 'base.html.twig' %}

{% block title %}Ville
{% endblock %}

{% block body %}

<div class="container">
    <h1 class="title next-center nt-4 text-dark">transfert appartenant au ville : {{vil.name}}</h1>

    <table class="table nt-4 text-muted">
        <thead>
            <tr>
                <th colspan="12" class="text-info">Transfert de {{vil.name}}</th>
            </tr>
        </thead>

        {% for transfert in vil.transferts %}
            <tbody>
             
                <tr>
                    {# <td> <a href="{{transfert.id}}"></a></td>

                    {{path('tab', {id:ville.id})}} #}
                  
                    <td> Expediteur: {{transfert.expediteur}}</td>
                    <td> Agent_Livreur: {{transfert.agentlivreur}}</td>
                    <td>Transfert: <a class="btn btn-primary p-1 m-1" href="{{ path('app_transfert_show', {'id': transfert.id}) }}">{{transfert.id}}</a></td>
                  
                </tr>
            </tbody>
        {% else %}  
            <tr>
                <td colspan="12">Pas de transfert disponible pour cette Ville</td>
            </tr>
              <tr>
                <td colspan="12">Pas d'agent disponible pour cet transfert</td>
            </tr>
        {%endfor%}

        </table>
    </div>
    {%endblock%}