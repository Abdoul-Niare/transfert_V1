							<td>{{ transfert.agentlivreur }}</td>
							<td>{{ transfert.statut }}</td>
							<td>
								<a class="btn btn-info" href="{{ path('app_transfert_show', {'id': transfert.id}) }}">Afficher</a>
								<a class="btn btn-primary" href="{{ path('app_transfert_edit', {'id': transfert.id}) }}">Mettre à jour</a>
							</td>
