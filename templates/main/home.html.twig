		{% if is_granted('ROLE_ADMIN') %}
			<div class=" list-group d-flex text-center mt-3">
				<a class="btn btn-info" style="margin:  auto" href="{{ path('app_transfert_index')}}">Liste de tous les transferts</a>
				<br>
				<a class="btn btn-primary" style="margin: 0 auto" href="{{ path('app_user_index') }}">Liste des agents livreur</a>
			</div>

			<div class="list-group">
				<h2 class="m-5">Toutes les Villes</h2>
				<ul class="nav nav-tabs justify-content-center">
