<div class="container mb-5">

	<div class="content_new">
		{{ form_start(form) }}
		<h3 class="text-center p-3">Commencer un nouveau transfert</h3>
		<div class="row ">
			<div class="col-4">

				{{ form_row(form.montTransfert) }}
				{{ form_row(form.numBenef) }}

			</div>

			<div class="col-4">

				{{ form_row(form.montBenef, {'attr': {'class': 'col-8', 'readonly' :true}}) }}
				{{ form_row(form.ville) }}

			</div>
			<div class="col-4">
				{{ form_row(form.fraisTransfert, {'attr': {'class': 'col-8', 'readonly' :true}}) }}
				{{ form_row(form.numTelBenef) }}

			</div>

			{{ form_row(form.nomBenef) }}

		</div>
		<h5 class="pt-2 text-center">1.00 EUR = 655.9570 CFA Franc BCEAO (XOF) </h5>
		<p class=" text-center" >Le taux de change reste toujours fixe entre Euro et le CFA!</p>
		<div class="d-flex justify-content-center mt-3">
			<div class=" m-5 ">
				<button class="btn btn-success">{{ button_label|default('Enrigistrer') }}</button>
				<a class="btn btn-info m-1" href="/">Annuler</a>

			</div>
		</div>
		{{ form_end(form) }}
	</div>


</div>
