{# {% extends 'base.html.twig' %}

{% block title %}Confirmation et paiement
{% endblock %}

{% block body %}

	<h1>
		Transfert
		{{ transfert.statut }}</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Transfert:
					{{ transfert.codeSecret }}</th>
				<td>{{ transfert.id }}</td>
			</tr>
			<tr>
				<th>Status</th>
				<td>{{ transfert.statut }}</td>
			</tr>
			<tr>
				<th>Code secret</th>
				<td>{{ transfert.codeSecret }}</td>
			</tr>
			<tr>
				<th>Montant du transfert</th>
				<td>{{ transfert.montTransfert }}</td>
			</tr>
			<tr>
				<th>Montant pour le Bénéficiaire</th>
				<td>{{ transfert.montBenef }}</td>
			</tr>
			<tr>
				<th>Frais de transfert</th>
				<td>{{ transfert.fraisTransfert }}</td>
			</tr>
			<tr>
				<th>Commission du site</th>
				<td>{{ transfert.comTransfert }}</td>
			</tr>
			<tr>
				<th>Commission de l'Agent_Livreur</th>
				<td>{{ transfert.comAgentLivreur }}</td>
			</tr>
			<tr>
				<th>Nom du bénéficiaire</th>
				<td>{{ transfert.nomBenef }}</td>
			</tr>
			<tr>
				<th>Cate d'identité du bénéficiaire</th>
				<td>{{ transfert.numBenef }}</td>
			</tr>
			<tr>
				<th>Telephone du bénéficiaire</th>
				<td>{{ transfert.numTelBenef }}</td>
			</tr>
			<tr>
				<th>Ville du bénéficiaire</th>
				<td>{{ transfert.ville }}</td>
			</tr>
			<tr>
				<th>Date d'envoi</th>
				<td>{{ transfert.dateEnvoi ? transfert.dateEnvoi|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Date de pris en charge</th>
				<td>{{ transfert.datePrisCharge ? transfert.datePrisCharge|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Date de livraison</th>
				<td>{{ transfert.dateLivr ? transfert.dateLivr|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<div class="text-center">
		{% if is_granted('ROLE_USER') and transfert.datePrisCharge == null %}
			<a class="btn btn-warning p-1 " href="{{ path('app_transfert_confirm', {'id': transfert.id}) }}">Confirmer et payer</a>
		{% elseif  is_granted('ROLE_USER') and  transfert.dateLivr == null %}
			<a class="btn btn-warning p-1 ml-1" href="{{ path('app_transfert_edit', {'id': transfert.id}) }}">Annuler</a>
		{% endif %}
	</div>
	{% if is_granted('ROLE_ADMIN') %}
		{{ include('transfert/_delete_form.html.twig') }}
	{% endif %}

{% endblock %} #}
