{% extends 'base.html.twig' %}

{% block title %}Gestion des villes
{% endblock %}

{% block body %}
	<section class="list_utilisateur">

    <h2 class="text-center m-4">Liste de toutes les villes</h2>

		<div class="container d-flex flex-column">
   			
			 <a class="btn btn-primary mb-3 ml-5" style="width: 120px; margin-left: 160px" href="{{ path('app_ville_new') }}"><i class="fa fa-earth-africa"></i> Add Ville</a>
			<table class="container-fluid w-25">
				<thead>
					<tr>
						<th>Id</th>
						<th>Nom</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for ville in villes %}
						<tr>
							<td>{{ ville.id }}</td>
							<td>{{ ville.name }}</td>
							<td>

								
							<a class="btn btn-info p-1 m-1" href="{{ path('app_ville_show', {'id': ville.id}) }}"><i class="fa fa-eye"></i> Afficher</a>

								<a class="btn btn-warning p-1 m-1" href="{{ path('app_ville_edit', {'id': ville.id}) }}"><i class="fa fa-edit"></i> Modifier</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="3">aucun enregistrement trouv√©.</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		
		</div>

</section>
{% endblock %}
